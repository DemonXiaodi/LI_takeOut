<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="priv.anna.reggie.mapper.CategoryMapper">

    <insert id="save" parameterType="priv.anna.reggie.domain.Category">
        INSERT INTO category VALUES(#{id},#{type},#{name},#{sort},#{createTime},#{updateTime},#{createUser},#{updateUser});
    </insert>

    <select id="findAll" resultType="priv.anna.reggie.domain.Category">
        SELECT * FROM category  order by sort desc
    </select>

    <update id="update" parameterType="priv.anna.reggie.domain.Category">
        update category
        <set>
            <if test="name!=null">
                name = #{name},
            </if>
            <if test="sort!=null">
                sort = #{sort},
            </if>
            <if test="updateUser!=null">
                update_time = #{updateTime},
            </if>
            <if test="updateUser!=null">
                update_user = #{updateUser}
            </if>
        </set>
        where id=#{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM category WHERE id=#{id}
    </delete>
    
    <select id="findByType" resultType="priv.anna.reggie.domain.Category" parameterType="int">
        SELECT * FROM category WHERE TYPE=#{type} ORDER BY sort ASC
    </select>

    <select id="findById" resultType="priv.anna.reggie.domain.Category" parameterType="long">
    SELECT * FROM category WHERE id=#{id}
    </select>

</mapper>