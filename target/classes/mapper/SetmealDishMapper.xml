<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="priv.anna.reggie.mapper.SetmealDishMapper">

    <insert id="save" parameterType="priv.anna.reggie.domain.SetmealDish">
        INSERT INTO setmeal_dish VALUES(#{id},#{setmealId},#{dishId},#{name},#{price},
        #{copies},#{sort},#{createTime},#{updateTime},#{createUser},#{updateUser},0)
    </insert>


    <select id="findBySetmealId" resultType="priv.anna.reggie.domain.SetmealDish" parameterType="long">
        SELECT * FROM setmeal_dish WHERE setmeal_id=#{setmealId}
    </select>

    <delete id="delete" parameterType="priv.anna.reggie.domain.SetmealDish" >
        DELETE FROM setmeal_dish WHERE setmeal_id = #{setmealId}
    </delete>


</mapper>
